<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marvinjason.art.AccountGuestFragment"
    android:id="@+id/rl_fragmentaccountguest">


    <TextView
        android:text="Browsing as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/btnLogin_fragmentAccountGuest"
        android:layout_centerHorizontal="true"
        android:textSize="12sp" />

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        style="?attr/borderlessButtonStyle"
        android:id="@+id/btnLogin_fragmentAccountGuest"
        android:background="@drawable/custom_button"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="?android:attr/textColorTertiary" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/default_avatar"
        android:layout_marginTop="27dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="to start shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/btnSignup_fragmentAccountGuest"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="?attr/borderlessButtonStyle"
        android:id="@+id/btnSignup_fragmentAccountGuest"
        android:background="@drawable/custom_button"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/btnLogin_fragmentAccountGuest"
        android:textAllCaps="false"
        android:textColor="?android:attr/textColorTertiary" />

</RelativeLayout>
